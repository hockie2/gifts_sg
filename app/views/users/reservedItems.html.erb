<div id ='items_main_wrapper'>

    <div id="user_inner_wrapper">

        <div id="user_top_wrapper">
            <% if current_user && current_user.id == @user.id %>
                <h2>MY LISTINGS</h2>
            <% else %>
                <h2><%= @user.name %> 's LISTINGS</h2>
            <% end %>
        </div>
        <div class = 'link-paths'>
            <% if @items_reserved.length > 0 %>
                <p><%= link_to "Reserved", reservedItems_path %> ( <%= @items_reserved.length %>)</p>
            <% end %>
            <% if @items_available.length > 0 %>
                <p><%= link_to "Available", availableItems_path %> ( <%= @items_available.length %>)</p>
            <% end %>
            
            <% if @items_closed.length > 0 %>
                <p><%= link_to "Closed", closedItems_path %> ( <%= @items_closed.length  %>)</p>
            <% end %>
            <% if @myReservedItems.length > 0 %>
                <p><%= link_to "Reserved by me", myReservedItems_path %> ( <%= @myReservedItems.length %>)</p>
            <% end %>
        </div>

        <div id="user_bottom_wrapper">
         
            <%= render :partial => "reservedItem", :locals => { :item => @items_reserved } %>
      
   
        </div>

    </div>
  </div>
