<div id ='items_main_wrapper'>

    <div id="items_inner_wrapper">
        <div id="items_left">
            <%= cl_image_tag(@item.public_id) %>
        </div>
        <div id="items_right">
           <p>Category</p>
           <%= @item.category %>

           <p>Name </p>
           <%= @item.name %>


           <p>Description</p>
           <%= @item.description %>

           <% if @item.preloved? %>
            <p> Preloved</p>
           <% else %>
            <p> New </p>
           <% end %>
          
          <p> posted by <%= @item.user.name %>
       </div>
   </div>
</div>