<div class="container">

<h1>All Items</h1>

  <% @items.each do |item| %>
      <%= item.name %>
      <%= item.category %>
      <%= item.description %>
      <%= item.preloved %>
  
        
      <%= link_to 'Show', item_path(item) %>
      <% if user_signed_in? %>
        <%= link_to 'Edit', edit_item_path(item) %>
        <%= link_to 'Destroy', item_path(item),
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
          <% end %>
      <% end %>
    
  


</div>
 