<div id="background"></div>

<div class="main_wrapper">

<% @items.each do |item| %>
    <div class="post_wrapper">
        <div class="top_wrapper d-flex align-items-center d-flex justify-content-between">
            <span class="title"><div id="profile_pic"></div><%= item.name %></span>

        </div>
        <div id="photo"><%= link_to item_path(item) do %><%= cl_image_tag(item.public_id) %><% end %></div>
        <div class="description_wrapper">
            <span id="description"><%= item.description %></span>
            <div id="timestamp"><%= item.updated_at.strftime('%d %B, %l:%M%P') %></div>
            <div class="bottom_wrapper">

                <p id="username">posted by  <a href = "/users/<%= item.user.id %>" ><%= item.user.name %></a></p>
                    <% if user_signed_in? && current_user.email == item.user.email %>
                       <div id="controls">
                        <%= link_to 'Edit', edit_item_path(item) %> | <%= link_to 'Destroy', item_path(item), method: :delete, data: { confirm: 'Are you sure?' } %>
                       </div>
                    <% elsif user_signed_in? && current_user.email != item.user.email %>
                        <button class ="btn btn-info reserve"> Reserve </button>
                    <% end %>
            </div>
        </div>
    </div>
<% end %>


</div>


